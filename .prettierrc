{
  "trailingComma": "es5",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": false,
  "arrowParens": "avoid",
  "useTabs": false,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^react$", 
    "^next",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/components/(.*)$",
    "^@/lib/(.*)$",
    "^@/hooks/(.*)$",
    "^@/utils/(.*)$",
    "",
    "^[./]" 
  ],
  "importOrderParserPlugins": ["typescript", "jsx"],
  "tailwindAttributes": ["class", "className"],
  "tailwindFunctions": ["clsx", "cn"]
}
